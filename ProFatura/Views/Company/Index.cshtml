@using ProFatura.Entity.Concrete
@model List<Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Müşteriler</h4>
            <a href="/Customer/AddCustomer" class="btn btn-primary">Yeni Müşteri Ekle</a>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Şirket Adı</th>
                                    <th>Mail</th>
                                    <th>Telefon</th>
                                    <th>Fax</th>
                                    <th>Vergi No</th>
                                    <th>Durum</th>
                                    <th>Hareketler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CompanyId</td>
                                        <td>@item.CompanyName</td>
                                        <td>@item.CompanyMail</td>
                                        <td>@item.CompanyPhone</td>
                                        <td>@item.CompanyFax</td>
                                        <td>@item.CompanyTaxNo</td>
                                        <td>
                                            <label class="badge badge-success">Closed</label>
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
